{
  "name": "react-use-rect",
  "version": "0.1.0-alpha.6",
  "description": "React hook that measures target element boundaries",
  "license": "MIT",
  "author": "Vladimir Ivanenko <d521bb85@gmail.com>",
  "homepage": "https://github.com/d521bb85/react-use-rect",
  "scripts": {
    "clean": "rimraf ./dist",
    "format": "eslint --fix ./src",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:cov": "tsdx test --coverage",
    "test:e2e-fixture": "npm run build && parcel test/fixture/index.html --out-dir test/fixture/.dist --cache-dir test/fixture/.cache --port 8080",
    "build": "npm run clean && tsdx build",
    "watch": "tsdx watch",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "./packages/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d521bb85/react-use-rect"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/react-use-rect.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.2.0",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "react": "^16.14.0",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7",
    "tsdx": "^0.14.1"
  }
}
