{
  "name": "react-use-rect",
  "version": "1.1.4",
  "description": "Hook that measures element boundaries",
  "license": "MIT",
  "author": "Vladimir Ivanenko <d521bb85@gmail.com>",
  "homepage": "https://github.com/d521bb85/react-use-rect",
  "repository": "https://github.com/d521bb85/react-use-rect",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/react-use-rect.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "react",
    "hooks"
  ],
  "scripts": {
    "format": "prettier --write ./src",
    "lint": "eslint --fix ./src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e-fixture": "npm run build && parcel test/fixture/index.html --out-dir test/fixture/.dist --cache-dir test/fixture/.cache --port 8080",
    "clean": "rm -rf ./dist",
    "dts": "tsc",
    "dts:watch": "tsc --watch --preserveWatchOutput",
    "bundle": "rollup -c",
    "build": "npm run clean && npm run dts && npm run bundle",
    "prepublishOnly": "npm run test && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@testing-library/react": "^12.1.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "esbuild": "^0.12.27",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "parcel-bundler": "^1.9.4",
    "prettier": "^2.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-esbuild": "^4.5.0",
    "styled-components": "^5.3.1",
    "styled-normalize": "^8.0.7",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
